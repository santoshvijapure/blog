
<% include partials/header %> 
<h1>hello</h1>


<% blogs.forEach(function(blog){ %>
    <div>
        <h1> <%= blog.title %></h1>
        <img src="<%= blog.img %>" alt="blog img">
        <span><%= blog.created.toDateString()  %></span>
        <p>
            <%- blog.body.substring(0,100) %>
        </p>
        <a href="/blogs/<%= blog._id%>"> read more </a>
    </div>
<%})%>

<% include ./partials/footer %>