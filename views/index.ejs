
<% include partials/header %> 

<div class="container">
    <div>
        <h1 class="text-center">
            RESTful Blog
        </h1>
        <% blogs.forEach(function(blog){ %>
            <div class="jumbotron">
                <h1 class="text-center"> <%= blog.title %></h1>
                <center>
                    <img class="img img-responsive thumbnail" src="<%= blog.img %>" alt="blog img">
                </center>
                <div  style="text-align: right !important"> <%= blog.created.toDateString()%></div>
                <p>
                    <%- blog.body.substring(0,100) %>
                </p>
                <div style="text-align: right !important">

                        <a class="btn btn-primary "  href="/blogs/<%= blog._id%>">read more </a>
                </div>
            </div>
        <%})%> 
    </div>
</div>
<% include ./partials/footer %>